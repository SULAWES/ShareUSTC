# Database Configuration
DATABASE_URL=postgres://shareustc_app:replace-with-db-password@localhost:5432/shareustc

# JWT Configuration
JWT_SECRET=replace-with-a-strong-jwt-secret

# Server Configuration
SERVER_HOST=127.0.0.1
SERVER_PORT=8080

# Legacy Local Storage (fallback only)
IMAGE_UPLOAD_PATH=./uploads/images
RESOURCE_UPLOAD_PATH=./uploads/resources
IMAGE_BASE_URL=http://localhost:8080

# OSS Configuration
ALIYUN_ACCESS_KEY_ID=replace-with-your-access-key-id
ALIYUN_ACCESS_KEY_SECRET=replace-with-your-access-key-secret
OSS_BUCKET=replace-with-your-bucket-name
OSS_REGION=oss-cn-shanghai
OSS_ENDPOINT=https://oss-cn-shanghai.aliyuncs.com
OSS_PUBLIC_URL=https://replace-with-your-bucket-name.oss-cn-shanghai.aliyuncs.com
STS_ROLE_ARN=acs:ram::replace-with-account-id:role/replace-with-role-name
STS_SESSION_DURATION=900

# Log Level
# 格式: 模块名=级别 (trace, debug, info, warn, error)
RUST_LOG=backend=debug,actix_web=info,sqlx=warn

# Admin Configuration
# 管理员用户名，注册时使用此用户名将自动获得管理员权限
ADMIN_USERNAME=admin
